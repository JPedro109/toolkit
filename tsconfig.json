{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "typeRoots": [
      "./src/@types"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}